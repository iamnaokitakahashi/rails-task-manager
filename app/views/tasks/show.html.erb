<div class="container mt-3">
<h1>My Tasks!</h1>

<p><%= @task.title %></p>
<p><%= @task.details %></p>
<p><% @task.completed ? 'Yes' : 'No' %></p>

<p><%= link_to "Edit task!", edit_task_path(@task), class: 'btn btn-primary' %></p>
  <p><%= link_to '🗑️', task_path(@task), class: 'btn btn-warning', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }  %></p>
<p><%= link_to 'Back to list', tasks_path, class: 'btn btn-secondary'  %></p>

</div>
